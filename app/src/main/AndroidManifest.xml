<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creawor.addcamera">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".module.login.ui.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.home.MainActivity"
            android:label="选择" />
        <activity android:name=".module.setting.ui.SettingActivity"
            android:label="@string/action_settings" />
        <activity android:name=".module.setting.ui.SetServerUrl"
            android:label="@string/set_server_url" />
        <activity android:name=".module.add.ui.AddCameraActivity"
            android:label="@string/main_menu_1" />
    </application>

</manifest>
