<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <include layout="@layout/put_toolbar" />

    <!-- 输入信息 -->
    <LinearLayout
        android:padding="@dimen/dimen_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_32"
        android:layout_below="@id/toolbar"
        android:layout_marginRight="@dimen/dimen_32"
        android:layout_marginLeft="@dimen/dimen_32"
        android:background="@drawable/radius_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:singleLine="true"
            android:background="@null"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/user_01_ico"
            android:drawablePadding="@dimen/dimen_4"
            android:text="admin"
            android:maxLength="11"
            android:textSize="@dimen/dimen_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/light_grey" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48"
            android:singleLine="true"
            android:textColor="@color/white"
            android:background="@null"
            android:drawableLeft="@drawable/secret_ico"
            android:drawablePadding="@dimen/dimen_4"
            android:inputType="textPassword"
            android:maxLength="12"
            android:text="123456"
            android:textSize="@dimen/dimen_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/light_grey" />


        <Button
            android:id="@+id/btn_doLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/radius_btn_selector"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:text="@string/doLogin"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dimen_8"
        android:text="版本号V2.0"
        android:gravity="center_horizontal"/>

</RelativeLayout>